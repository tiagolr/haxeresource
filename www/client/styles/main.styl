
// Vars
$sidebar-width = 250px
$tooltip-color = #88704D
$tooltip-text-color = #fff

// imports
@import "sidebar.import.styl"
@import "listArticles.import.styl"
@import "navbar.import.styl"
@import "newArticle.import.styl"
@import "viewArticle.import.styl"

body
	font-family: Arial !important;

#preload
	width 100%
	height 100%
	background #ffffff
	position fixed
	top 0
	left 0
	z-index 300000
	text-align center
	padding-top 25%
	
	#preload-contents
		position absolute
		top 40%
		left calc(50% - 300px / 2)

		.progress
			width: 300px
			margin-left: calc(50% - 300px / 2)
			
	#preload-refresh
		display none

#wrapper
	padding-left 0
	-webkit-transition all 0.5s ease
	-moz-transition all 0.5s ease
	-o-transition all 0.5s ease
	transition all 0.5s ease

#wrapper.toggled 
	padding-left $sidebar-width
	
	#sidebar-wrapper 
		width $sidebar-width
	
	#page-content-wrapper
		position absolute
		margin-right $sidebar-width * -1


#page-content-wrapper 
	width 100%
	position absolute
	padding 15px
	margin-top 50px
	//height 100%
	
	.page-container
		min-height 100%
		height auto !important
		
@media(min-width 768px) 

	#wrapper 
		padding-left $sidebar-width
		
	#sidebar-wrapper
		width $sidebar-width
		margin-top 0
		
	#page-content-wrapper
		padding 20px
		position relative
		
	#wrapper.toggled 
		padding-left 0
		
		#sidebar-wrapper
			width 0
			
		#page-content-wrapper 
			position relative
			margin-right 0
		

.icon-tooltip
	display inline
	
	> span
		color #3594D7
	
.tooltip
	
	> .tooltip-inner
		max-width: 350px
		background-color $tooltip-color
		color $tooltip-text-color
		text-align left
			
	&.right > .tooltip-arrow
		border-right-color $tooltip-color

	&.left > .tooltip-arrow
		border-left-color $tooltip-color

	&.bottom > .tooltip-arrow
		border-bottom-color $tooltip-color
			
	&.top > .tooltip-arow
		border-top-color $tooltip-color
			
	&.top > .tooltip-arrow
		border-top-color $tooltip-color